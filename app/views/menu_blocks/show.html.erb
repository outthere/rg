<% content_for :body_content_title do %>
  <%= @menu_block.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @menu_block.name %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @menu_block.title %>
    </p>
  </section>
  <section>
    <h1>Deletable</h1>
    <p>
      <%=raw @menu_block.deletable %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="menu_blocks">
      <% @menu_blocks.each do |menu_block| %>
        <li>
          <%= link_to menu_block.name, menu_block_path(menu_block) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
