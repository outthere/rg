<% content_for :body_content_title do %>
  <%= @enrollment.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @enrollment.name %>
    </p>
  </section>
  <section>
    <h1>Place</h1>
    <p>
      <%=raw @enrollment.place %>
    </p>
  </section>
  <section>
    <h1>Program Type</h1>
    <p>
      <%=raw @enrollment.program_type %>
    </p>
  </section>
  <section>
    <h1>When To Start</h1>
    <p>
      <%=raw @enrollment.when_to_start %>
    </p>
  </section>
  <section>
    <h1>Resume</h1>
    <p>
      <%= link_to 'resume', @enrollment.resume.url %>
    </p>
  </section>
  <section>
    <h1>Phone</h1>
    <p>
      <%=raw @enrollment.phone %>
    </p>
  </section>
  <section>
    <h1>Comment</h1>
    <p>
      <%=raw @enrollment.comment %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="enrollments">
      <% @enrollments.each do |enrollment| %>
        <li>
          <%= link_to enrollment.name, enrollment_path(enrollment) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
