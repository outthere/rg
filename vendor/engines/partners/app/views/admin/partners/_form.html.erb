<%= form_for [:admin, @partner] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @partner,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :company -%>
    <%= f.text_field :company  -%>
  </div>
  
  <div class='field'>
    <%= f.label :position -%>
    <%= f.text_field :position  -%>
  </div>
  
  <div class='field'>
    <%= f.label :cooperation -%>
    <%= f.text_field :cooperation  -%>
  </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email  -%>
  </div>
  
  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone  -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.partners.partner'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @partner.name)
              } %>
<% end -%>
